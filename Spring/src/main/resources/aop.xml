<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=
		"http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="greetingAdvice" class="com.study.spring.aop.before.GreetingBeforeAdvice" />
	<bean id="target" class="com.study.spring.aop.before.WaiterA" />
	<bean id="waiter" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces" value="com.study.spring.aop.before.Waiter"/>
		<property name="interceptorNames" value="greetingAdvice"/>
		<property name="target" ref="target"/>
	</bean>
</beans>