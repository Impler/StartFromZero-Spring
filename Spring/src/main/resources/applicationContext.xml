<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	为了使配置文件更具扩展性，Spring采用Schema格式，能够为不同类型的配置拥有自己的命名空间。
	xmlns="http://www.springframework.org/schema/beans" 默认命名空间
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi标准命名空间，用于指定自定义命名空间的schema文件
	xmlns:aop="http://www.springframework.org/schema/aop" aop自定义命名空间，后面指定命名空间的全称，并且必须在xsi schemaLocation中为其指定对应的schema文件	
 -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation=
		"http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/beans/spring-aop-3.1.xsd">
        
        
    <!-- 
    	id: 唯一标识符
    	class: 对应的全限定类名，对应BeanDefinition对象
     -->
    <bean id="xxx" class="xxx">
    	<!-- 
    		name: 对象属性名； 
    		ref：引用配置文件中配置的其他bean对象；
    		idref: 引用bean id（字符串），相当于value，只不过会验证bean存不存在
    		value: 值 
    	-->
    	<!-- 
    	<property name="" ref=""></property>
    	<property name="">
    		<idref/>
    		<ref/>
    	</property>
    	<property name="" value=""></property>
    	 -->
    </bean>
	<!-- Composing XML-based configuration by import resource -->
	<import resource="helloworld.xml" />
</beans>