<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
<!-- 
	Dependency injection(DI), 依赖注入：是容器通过构造方法或工厂方法创建Bean及其依赖的Bean，并将这些依赖通过对象的构造方法参数、工厂方法参数或者setter方法传递到对象中的过程。
	对象的依赖是由容器决定的而非对象本身决定，因此说这个过程的控制权是反向的，即为 Inversion of control(IoC)。
 -->
 
 <!-- Dependency injection  -->
 <!-- 1. Constructor-based  -->
 <!-- 2. Setter-based  -->
 
 <!-- Constructor-based Dependency injection s-->
 	
 	<!-- different types of constructor argument types s-->
 	<!-- no potential ambiguity exists in the constructor arguments, 'ref' attribute is enough -->
 	<bean id="bar" class="com.study.spring._01core._01ioc._04dependency_injection.domain.Bar"></bean>
 	<bean id="baz" class="com.study.spring._01core._01ioc._04dependency_injection.domain.Baz"></bean>
 	<bean id="foo" class="com.study.spring._01core._01ioc._04dependency_injection.domain.Foo">
 		<constructor-arg ref="baz" />
 		<constructor-arg ref="bar" />
 	</bean>
 	<!-- different types of constructor argument types e-->
	
	<!-- different simple types of constructor argument types s-->
	<!-- simple type should use 'type' attribute to specific java type, because the value of configuration is default 'String' -->
 	<bean id="user" class="com.study.spring._01core._01ioc._04dependency_injection.domain.User">
 		<constructor-arg type="java.lang.String" value="TOM" />
 		<constructor-arg type="int" value="23" />
 		<constructor-arg type="char" value="M" />
 		<constructor-arg type="java.lang.String" value="china" />
 	</bean>
	<!-- different simple types of constructor argument types e-->

	<!-- more complex case, use 'index' attribute -->
	<bean id="userComplex" class="com.study.spring._01core._01ioc._04dependency_injection.domain.User">
 		<constructor-arg index="1" value="TOM" />
 		<constructor-arg index="0" value="china" />
 	</bean>
 <!-- Constructor-based Dependency injection e-->
 
 <!-- Setter-based Dependency injection s -->
 	<!-- the bean mast have corresponding setter method -->
	<bean id="fooSetter" class="com.study.spring._01core._01ioc._04dependency_injection.domain.Foo">
		<property name="bar" ref="bar" />
		<property name="baz" ref="baz" />
	</bean>
 <!-- Setter-based Dependency injection e -->
</beans>