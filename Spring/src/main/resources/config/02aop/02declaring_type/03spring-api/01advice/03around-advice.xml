<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation=
		"http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- debugInterceptor Logs full invocation details on method entry and method exit -->
	<bean id="debugInterceptor" class="org.springframework.aop.interceptor.DebugInterceptor"/>
	
	<!-- around advice start -->
	<bean id="greetingAroundAdvice" class="com.study.spring._05aop._01declaring_type._03spring_api._01advice._03around.GreetingAroundAdvice" />
	<bean id="target" class="com.study.spring._05aop._01declaring_type._03spring_api._01advice.WaiterA" />
	<bean id="aroundWaiter" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces" value="com.study.spring._05aop._01declaring_type._03spring_api._01advice.Waiter"/>
		<property name="interceptorNames" value="greetingAroundAdvice"/>
		<property name="target" ref="target"/>
	</bean>
	<!-- around advice end -->
	
</beans>